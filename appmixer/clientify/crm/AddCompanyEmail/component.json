{
  "name": "appmixer.clientify.crm.AddCompanyEmail",
  "author": "Clientify",
  "label": "Add Company Email",
  "description": "Add an email to a company.",
  "private": false,
  "version": "0.1.0",
  "auth": {
    "service": "appmixer:clientify"
  },
  "inPorts": [
    {
      "name": "in",
      "schema": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "companyId": {
            "type": "number"
          },
          "email": {
            "type": "string"
          },
          "type": {
            "type": "number"
          }
        },
        "required": [
          "companyId",
          "email",
          "type"
        ]
      },
      "inspector": {
        "inputs": {
          "companyId": {
            "type": "number",
            "label": "Company ID",
            "tooltip": "Set Company ID (can be mapped from previous steps).",
            "index": 1
          },
          "email": {
            "type": "text",
            "label": "Email",
            "tooltip": "Set Email (can be mapped from previous steps).",
            "index": 2
          },
          "type": {
            "type": "number",
            "label": "Type",
            "tooltip": "Set Type (can be mapped from previous steps).",
            "index": 3
          }
        }
      }
    }
  ],
  "outPorts": [
    {
      "name": "out",
      "schema": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "id": {
            "type": "number"
          },
          "type": {
            "type": "number"
          },
          "email": {
            "type": "string"
          },
          "is_hard_bounce": {
            "type": "boolean"
          }
        },
        "required": [
          "id"
        ]
      }
    }
  ]
}
