{
  "name": "appmixer.clientify.crm.AddCompanyPhone",
  "author": "Clientify",
  "label": "Add Company Phone",
  "description": "Add a phone to a company.",
  "private": false,
  "version": "0.1.0",
  "auth": {
    "service": "appmixer:clientify"
  },
  "inPorts": [
    {
      "name": "in",
      "schema": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "companyId": {
            "type": "number"
          },
          "phone": {
            "type": "string"
          },
          "type": {
            "type": "number"
          }
        },
        "required": [
          "companyId",
          "phone",
          "type"
        ]
      },
      "inspector": {
        "inputs": {
          "companyId": {
            "type": "number",
            "label": "Company ID",
            "tooltip": "Set Company ID (can be mapped from previous steps).",
            "index": 1
          },
          "phone": {
            "type": "text",
            "label": "Phone",
            "tooltip": "Set Phone (can be mapped from previous steps).",
            "index": 2
          },
          "type": {
            "type": "number",
            "label": "Type",
            "tooltip": "Set Type (can be mapped from previous steps).",
            "index": 3
          }
        }
      }
    }
  ],
  "outPorts": [
    {
      "name": "out",
      "schema": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "id": {
            "type": "number"
          },
          "type": {
            "type": "number"
          },
          "phone": {
            "type": "string"
          },
          "whatsapp": {
            "type": "boolean"
          },
          "is_hard_bounce": {
            "type": "boolean"
          }
        },
        "required": [
          "id"
        ]
      }
    }
  ]
}
